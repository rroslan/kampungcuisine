{% extends 'base.html' %} {% block title %}Contact Us - Kampung Cuisine{%
endblock %} {% block content %}
<div class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <div class="hero min-h-96 bg-gradient-to-br from-primary to-secondary">
        <div class="hero-content text-center text-neutral-content">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Contact Us</h1>
                <p class="py-6 text-xl">
                    Get in touch with us for any questions about our authentic
                    Malaysian cuisine products
                </p>
            </div>
        </div>
    </div>

    <!-- Contact Form and Info Section -->
    <div class="container mx-auto px-4 py-16">
        <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
            <!-- Contact Form -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h2 class="card-title text-3xl mb-6">Send us a message</h2>

                    <!-- Display messages -->
                    {% if messages %} {% for message in messages %}
                    <div
                        class="alert alert-{{ message.tags|default:'info' }} mb-4"
                    >
                        <span>{{ message }}</span>
                    </div>
                    {% endfor %} {% endif %}

                    <form method="post" class="space-y-6">
                        {% csrf_token %}

                        <!-- Name Field -->
                        <div class="form-control">
                            <label
                                class="label"
                                for="{{ form.name.id_for_label }}"
                            >
                                <span class="label-text font-semibold"
                                    >Name *</span
                                >
                            </label>
                            {{ form.name }} {% if form.name.help_text %}
                            <label class="label">
                                <span
                                    class="label-text-alt text-base-content/70"
                                    >{{ form.name.help_text }}</span
                                >
                            </label>
                            {% endif %} {% if form.name.errors %}
                            <label class="label">
                                <span class="label-text-alt text-error"
                                    >{{ form.name.errors.0 }}</span
                                >
                            </label>
                            {% endif %}
                        </div>

                        <!-- Email Field -->
                        <div class="form-control">
                            <label
                                class="label"
                                for="{{ form.email.id_for_label }}"
                            >
                                <span class="label-text font-semibold"
                                    >Email *</span
                                >
                            </label>
                            {{ form.email }} {% if form.email.help_text %}
                            <label class="label">
                                <span
                                    class="label-text-alt text-base-content/70"
                                    >{{ form.email.help_text }}</span
                                >
                            </label>
                            {% endif %} {% if form.email.errors %}
                            <label class="label">
                                <span class="label-text-alt text-error"
                                    >{{ form.email.errors.0 }}</span
                                >
                            </label>
                            {% endif %}
                        </div>

                        <!-- Phone Field (Optional) -->
                        <div class="form-control">
                            <label
                                class="label"
                                for="{{ form.phone.id_for_label }}"
                            >
                                <span class="label-text font-semibold"
                                    >Phone</span
                                >
                                <span
                                    class="label-text-alt text-base-content/60"
                                    >(Optional)</span
                                >
                            </label>
                            {{ form.phone }} {% if form.phone.help_text %}
                            <label class="label">
                                <span
                                    class="label-text-alt text-base-content/70"
                                    >{{ form.phone.help_text }}</span
                                >
                            </label>
                            {% endif %} {% if form.phone.errors %}
                            <label class="label">
                                <span class="label-text-alt text-error"
                                    >{{ form.phone.errors.0 }}</span
                                >
                            </label>
                            {% endif %}
                        </div>

                        <!-- Subject Field -->
                        <div class="form-control">
                            <label
                                class="label"
                                for="{{ form.subject.id_for_label }}"
                            >
                                <span class="label-text font-semibold"
                                    >Subject *</span
                                >
                            </label>
                            {{ form.subject }} {% if form.subject.help_text %}
                            <label class="label">
                                <span
                                    class="label-text-alt text-base-content/70"
                                    >{{ form.subject.help_text }}</span
                                >
                            </label>
                            {% endif %} {% if form.subject.errors %}
                            <label class="label">
                                <span class="label-text-alt text-error"
                                    >{{ form.subject.errors.0 }}</span
                                >
                            </label>
                            {% endif %}
                        </div>

                        <!-- Message Field -->
                        <div class="form-control">
                            <label
                                class="label"
                                for="{{ form.message.id_for_label }}"
                            >
                                <span class="label-text font-semibold"
                                    >Message *</span
                                >
                            </label>
                            {{ form.message }} {% if form.message.help_text %}
                            <label class="label">
                                <span
                                    class="label-text-alt text-base-content/70"
                                    >{{ form.message.help_text }}</span
                                >
                            </label>
                            {% endif %} {% if form.message.errors %}
                            <label class="label">
                                <span class="label-text-alt text-error"
                                    >{{ form.message.errors.0 }}</span
                                >
                            </label>
                            {% endif %}
                        </div>

                        <!-- Submit Button -->
                        <div class="form-control mt-8">
                            <button
                                type="submit"
                                class="btn btn-primary btn-lg"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 mr-2"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"
                                    />
                                </svg>
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="space-y-8">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h3 class="card-title text-2xl mb-4">Get in Touch</h3>
                        <div class="space-y-4">
                            <div class="flex items-center">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 mr-3 text-primary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    />
                                </svg>
                                <span>info@kampungcuisine.com</span>
                            </div>
                            <div class="flex items-center">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 mr-3 text-primary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    />
                                </svg>
                                <span>+60 3-1234 5678</span>
                            </div>
                            <div class="flex items-center">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 mr-3 text-primary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                </svg>
                                <span>Kuala Lumpur, Malaysia</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h3 class="card-title text-2xl mb-4">Business Hours</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="font-semibold"
                                    >Monday - Friday:</span
                                >
                                <span>9:00 AM - 6:00 PM</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-semibold">Saturday:</span>
                                <span>10:00 AM - 4:00 PM</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-semibold">Sunday:</span>
                                <span>Closed</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h3 class="card-title text-2xl mb-4">Quick Response</h3>
                        <p class="text-base-content/70 mb-4">
                            We typically respond to all inquiries within 24
                            hours during business days. For urgent matters,
                            please call us directly.
                        </p>
                        <div class="alert alert-info">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                class="stroke-current shrink-0 w-6 h-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <span
                                >Follow us on social media for updates and
                                special offers!</span
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
