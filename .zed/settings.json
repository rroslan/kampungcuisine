{
    "languages": {
        "HTML": {
            "formatter": {
                "external": {
                    "command": "djlint",
                    "arguments": ["--reformat", "--quiet", "${file}"]
                }
            },
            "format_on_save": "on",
            "tab_size": 4,
            "hard_tabs": false
        }
    },
    "lsp": {
        "html-language-server": {
            "settings": {
                "html": {
                    "validate": {
                        "scripts": false,
                        "styles": false
                    }
                }
            }
        }
    },
    "format_on_save": "on",
    "tab_size": 4,
    "hard_tabs": false,
    "preferred_line_length": 120,
    "show_wrap_guides": true,
    "wrap_guides": [120],
    "remove_trailing_whitespace_on_save": true,
    "ensure_final_newline_on_save": true,
    "file_scan_exclusions": [
        "**/.git",
        "**/node_modules",
        "**/__pycache__",
        "**/staticfiles",
        "**/*.pyc",
        "**/*.backup",
        "**/venv"
    ]
}
